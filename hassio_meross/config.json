{
  "name": "Hassio Meross",
  "version": "0.1.2",
  "slug": "hassio_meross",
  "arch": ["amd64","i386"],
  "description": "Hassio addon for Meross device using MQTT and autodiscovery.",
  "startup": "services",
  "boot": "auto",
  "options": {
    "mqtt": {
      "host": "",
      "port": "1883",
      "protocol": "mqtt",
      "username": "",
      "password": "",
      "rejectUnauthorized": false
    },
    "topic": {
      "discovery_prefix": "homeassistant"
    },
    "meross": {
      "email": "",
      "password": ""
    },
    "devices": {
      "refresh": 10000
    }
  },
  "schema": {
    "mqtt": {
      "host": "str",
      "port": "port",
      "protocol": "match(^(mqtt|mqtts|ws|wss)$)",
      "username": "str",
      "password": "str",
      "rejectUnauthorized": "bool"
    },
    "topic": {
      "discovery_prefix": "str"
    },
    "meross": {
      "email": "str",
      "password": "str"
    },
    "devices": {
      "refresh": "int"
    }
  }
}
